		<StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 10 0">
			<Button Style="{StaticResource SelectButtonStyle}" Name="RunModelling" 
                    Grid.Row="4" Grid.Column="1" Width="100" Height="30" Command="{Binding Create}" >
				<StackPanel Orientation="Horizontal">
					<iconPacks:PackIconUnicons  Kind="ObjectGroup" Style="{StaticResource menuButtonIcon}" />
					<TextBlock Text="Run Model" Style="{StaticResource menuButtonText }"/>
				</StackPanel>
			</Button>
			<Button Style="{StaticResource SelectButtonStyle}" Name="Cancel" Grid.Row="3" Grid.Column="1" Width="100" Height="30" Command="{Binding Cancel}"  Click="Button_Click" >
				<StackPanel Orientation="Horizontal">
					<!--<iconPacks:PackIconUnicons  Kind="Cancel" Style="{StaticResource menuButtonIcon}"/>-->
					<TextBlock Text="Cancel" Style="{StaticResource menuButtonText }"/>
				</StackPanel>
			</Button>
