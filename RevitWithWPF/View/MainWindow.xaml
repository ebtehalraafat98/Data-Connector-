		<StackPanel Grid.Row="0" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20 0 0 0"
                    Grid.ColumnSpan="2">

			<TextBox Name="label" Width="250" Style="{StaticResource TextBoxStyle }" Text="{Binding FilePath ,Mode=TwoWay}">

			</TextBox>
			<Button HorizontalAlignment="Right" Style="{StaticResource SelectButtonStyle}" 
                    Name="Browse"  Width="100" Height="30" Command="{Binding BrowseCommand}" VerticalAlignment="Center" >
				<StackPanel Orientation="Horizontal">
					<iconPacks:PackIconUnicons  Kind="File" Style="{StaticResource menuButtonIcon}"/>
					<TextBlock Text="Browse" Style="{StaticResource menuButtonText }"/>
				</StackPanel>
			</Button>
		</StackPanel>

		<Separator Margin="20,-1,20,0" VerticalAlignment="Top" Grid.Row="1"
                   Grid.ColumnSpan="2" >
			<Separator.Background>
				<SolidColorBrush Color="#FF676665" Opacity="0.5"  />
			</Separator.Background>


		</Separator>
		<StackPanel Grid.Row="2" Margin="0 10 0 0" Grid.ColumnSpan="2">
			<TextBlock Text="Entities to Create" Margin="20 0 0 0 " Style="{StaticResource menuButtonText }" FontSize="15" FontWeight="Bold"></TextBlock >
			<StackPanel Margin="20 10 20 0" Height="70">
				<Grid >
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition  Width="*"></ColumnDefinition>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="*"></RowDefinition>
						<RowDefinition Height="*"></RowDefinition>
						<RowDefinition Height="*"></RowDefinition>
					</Grid.RowDefinitions>
					<CheckBox VerticalContentAlignment="Center" IsChecked="{Binding levels , Mode=TwoWay}"
                              Grid.Row="0" Grid.Column="0" Content="Levels" x:Name="C5" Style="{StaticResource CheckBoxStyle1}" Margin="0,0,0,0" Grid.RowSpan="2"/>
					<CheckBox VerticalContentAlignment="Center" 
                              IsChecked="{Binding Grids , Mode=TwoWay}" Grid.Row="0" Grid.Column="1" x:Name="C6" Content="Grids" Style="{StaticResource CheckBoxStyle1}" Margin="0" Grid.RowSpan="2"/>

					<CheckBox VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="0" Content="Columns" x:Name="C1" Style="{StaticResource CheckBoxStyle1}"
                              IsChecked="{Binding Columns , Mode=TwoWay}" Margin="0,4,179,-4" Grid.ColumnSpan="2" />
					<CheckBox VerticalContentAlignment="Center"  Grid.Row="2" Grid.Column="1" x:Name="C2" Content="Beams" Style="{StaticResource CheckBoxStyle1}"
                              IsChecked="{Binding Beams , Mode=TwoWay}" Margin="0,4,0,-4"/>
					<CheckBox VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="0" Content="Floors" x:Name="C3" Style="{StaticResource CheckBoxStyle1}"
                              IsChecked="{Binding Floors , Mode=TwoWay}"  Margin="0,27,179,-27" Grid.ColumnSpan="2"/>
                    <CheckBox VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="1" x:Name="C4" Content="Slanted Columns" Style="{StaticResource CheckBoxStyle1}"
                              IsChecked="{Binding SlantedColumns , Mode=TwoWay}" Margin="0,27,0,-27"/>
                    <CheckBox VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="0" x:Name="C7" Content="Footing" Style="{StaticResource CheckBoxStyle1}"
                              IsChecked="{Binding Footing , Mode=TwoWay}" Margin="0,49,179,-49" Grid.ColumnSpan="2"/>




</Grid>
			</StackPanel>


		</StackPanel>

